#include <mega16.h>
#include <delay.h>
void main() {
    PORTD=0b00000000;
    PORTC=0b00000000;  
    PORTA=0b00000000;

    DDRD=0b00001011;    
    DDRC=0b00001110;
    DDRA=0b10000000;

    
    while (1) {
        PORTA.7=1;
        PORTC.1=1;
        PORTC.2=1;
        PORTC.3=1;
        PORTD.0=1;
        PORTD.1=1;
        PORTD.3=1;    
        
        PORTA.7=0;
        PORTC.1=0;
        PORTC.2=0;
        PORTC.3=0;
        PORTD.0=0;
        PORTD.1=0;
        PORTD.3=0; 
        
        delay_ms(1000);   
    }
}